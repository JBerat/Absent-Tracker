<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:weightSum="4.3"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="284dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="-180dp"
            app:srcCompat="@drawable/dersprogramm" />

        <TextView
            android:id="@+id/dersId"
            android:layout_width="11dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-230dp"
            android:layout_weight="1"

            android:text="TextView"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginStart="-250dp"
            app:srcCompat="@drawable/greenprogramm" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="284dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="-180dp"
            app:srcCompat="@drawable/gunprogramm" />

        <TextView
            android:id="@+id/dayId"
            android:layout_width="11dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-230dp"
            android:layout_weight="1"

            android:text="TextView"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginStart="-250dp"
            app:srcCompat="@drawable/greenprogramm" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="284dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="-180dp"
            app:srcCompat="@drawable/devamsizlikprogramm" />

        <TextView
            android:id="@+id/absentId"
            android:layout_width="11dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-230dp"
            android:layout_weight="1"

            android:text="TextView"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginStart="-250dp"
            app:srcCompat="@drawable/greenprogramm" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="284dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="-180dp"
            app:srcCompat="@drawable/saatprogramm" />

        <TextView
            android:id="@+id/hourId"
            android:layout_width="11dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-230dp"
            android:layout_weight="1"

            android:text="TextView"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginStart="-250dp"
            app:srcCompat="@drawable/greenprogramm" />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/colorprogram"
        android:layout_marginStart="130dp"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center_horizontal"></ImageView>
</LinearLayout>