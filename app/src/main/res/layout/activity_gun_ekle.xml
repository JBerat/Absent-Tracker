<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GunEkle.GunEkle"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/derseklearka" />




    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginTop="-690dp"
        android:layout_marginLeft="140dp"
        android:gravity="center"
        android:text="Gün Ekle"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/Gunler"
        android:layout_width="128dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="Bir Gün Seçiniz"
        android:textColor="#FFFFFF"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="135dp"/>


    <Spinner
        android:id="@+id/Spinner01"
        android:layout_width="136dp"
        android:layout_height="31dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@android:color/white"></Spinner>

    <ImageView
        android:id="@+id/BackToEklenilenGunler"
        android:layout_width="60dp"
        android:layout_height="53dp"
        android:onClick="goBackToEklenilenGunler"
        app:srcCompat="@drawable/arti"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="563dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="300dp"
        />

</LinearLayout>