<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DersEkle.DersEkle">


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/derseklearka" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="101dp"
        android:layout_height="36dp"


        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Ders Ekle"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/BackToEklenilenDersler"
        android:layout_width="60dp"
        android:layout_height="53dp"
        android:layout_marginTop="564dp"
        android:onClick="goBackToEklenilenDersler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        app:srcCompat="@drawable/arti" />

    <TextView
        android:id="@+id/Dersler"
        android:layout_width="128dp"
        android:layout_height="38dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="144dp"
        android:gravity="center"
        android:text="Bir Ders Giriniz"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <EditText
        android:id="@+id/dersEditText"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:textColorHint="#FFFF"

        android:hint="Ders AdÄ± Girin:"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Dersler" />

</androidx.constraintlayout.widget.ConstraintLayout>